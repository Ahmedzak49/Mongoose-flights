<%- include('../partials/header.ejs') %>

<h1>New Flight</h1>
<section id="new-flight-section">
    <form action="/flights" method="POST" id="form1">
        <label>Airline
          <select name="airline" id="">
            <option value="American">American</option>
            <option value="Southest">Southwest</option>
            <option value="United">United</option>
          </select>

        </label><br>
        <label>Flight Number
            <input type="text" name="flightNo">
        </label><br>
        <label>Departure
          <input type="datetime-local" name="departs" value="<%= departsDate %>">
      </label>
      <select name="airport" id="">
          <option value="AUS">AUS</option>
          <option value="DEN">DEN</option>
          <option value="DFW">DFW</option>
          <option value="LAX">LAX</option>
      </select>
      <br>
      <button type="submit" form="form1" class="btn btn-success" id="submit-new-flight">Add Flight</button>
  </form>
</section>

<%- include('../partials/footer.ejs') %>
